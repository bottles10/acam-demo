<% if notice %>
    <div data-controller="flash" id="alert" class="p-4 mb-4 text-center font-medium bg-blue-100 text-blue-500 rounded" role="alert">
        <%= notice %>
    </div>
<% end %>

<% if alert %>
    <div data-controller="flash" id="alert" class="p-4 mb-4 text-center font-medium bg-yellow-100 text-yellow-500 rounded" role="alert">
        <%= alert %>
    </div>
<% end %>

