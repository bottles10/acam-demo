<div class="mb-8 flex items-center justify-between">
	<h1 class=" text-lg md:text-4xl font-bold">All Terms</h1>
	<%= link_to "Add term", new_semester_path, class: "btn-primary hover:bg-blue-500 hover:scale-105 transition duration-300" %>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
	<% @semesters.each do |year, semesters| %>
		<div class="">
			<div class="p-6 bg-gray-100 rounded-lg shadow-lg">
				<h3 class=" font-serif font-semibold text-xl  text-gray-800">Year: <%= year.year %></h3>
				
				<div class="mt-4">
					<% semesters.each do |semester| %>
						<%= link_to semester_path(semester) do %>
						<div class="p-4 mb-4 bg-white border-l-2 border-pink-500 hover:scale-95 transition duration-300 rounded-lg shadow-md">
							<p class="text-gray-700"><span class="font-medium">Term: </span><%= semester.term %></p>
						</div>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>