<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
 
  <div class="p-4 flex flex-col items-center justify-center space-y-2 shadow-2xl rounded-lg">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "font-medium" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control focus:border-blue-500 rounded" %>
    </div>

    <div class="actions">
      <%= f.submit "Resend unlock instructions", class: "btn-primary hover:bg-blue-500 hover:scale-105 transition-all duration-300" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

