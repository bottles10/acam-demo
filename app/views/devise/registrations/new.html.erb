<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="flex items-center justify-center">  
    <div class="w-2xl p-6 flex flex-col items-center justify-center space-y-4 shadow-2xl rounded-lg">
      
      <div class="mb-8">
        <h2 class="mb-2 text-3xl font-extrabold text-center">Sign up</h2>
        <p class="font-semibold text-lg">Or<span class="text-blue-600"><%= link_to " log in to your account", new_user_session_path %></span></p>
      </div>

      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="w-full">
        <%= f.label :username, class: "font-medium" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "happy24", class: "form-control w-full focus:border-blue-500 rounded-sm" %>
      </div>

      <div class="w-full">
        <%= f.label :first_name, class: "font-medium" %><br />
        <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "John", class: "form-control w-full focus:border-blue-500 rounded-sm" %>
      </div>

      <div class="w-full">
        <%= f.label :last_name, class: "font-medium" %><br />
        <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "John", class: "form-control w-full focus:border-blue-500 rounded-sm" %>
      </div>

      <div class="w-full">
        <%= f.label :email, class: "font-medium" %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder: "johndoe11@mail.com", class: "form-control w-full focus:border-blue-500 rounded-sm" %>
      </div>

      <div class="w-full">
        <%= f.label :password, class: "font-medium" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-full focus:border-blue-500 rounded-sm" %>
      </div>

      <div class="w-full">
        <%= f.label :password_confirmation, class: "font-medium" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-full focus:border-blue-500 rounded-sm" %>
      </div>

      <div class="w-full mt-6">
        <%= f.submit "Sign up", class: "btn-primary w-full hover:bg-blue-500 transition duration-300" %>
      </div>
      <%# render "devise/shared/links" %>
    </div>
  </div>
<% end %>

