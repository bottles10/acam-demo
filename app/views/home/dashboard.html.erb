  <h1 class="px-4 font-serif text-2xl font-bold">Dashboard</h1>
<div class="p-4">
  <!-- badges -->  
  <div class="mb-8 grid grid-cols-2 md:grid-cols-4 gap-6">
    <div class="py-4 flex flex-col items-center justify-center space-y-3 font-medium text-sm bg-purple-200 shadow-2xl rounded-lg">
      <div class="mb-2 w-8 h-8 flex flex-col items-center justify-center bg-purple-500 transform rotate-45 rounded">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 transform -rotate-45 text-white">
          <path d="M11.7 2.805a.75.75 0 0 1 .6 0A60.65 60.65 0 0 1 22.83 8.72a.75.75 0 0 1-.231 1.337 49.948 49.948 0 0 0-9.902 3.912l-.003.002c-.114.06-.227.119-.34.18a.75.75 0 0 1-.707 0A50.88 50.88 0 0 0 7.5 12.173v-.224c0-.131.067-.248.172-.311a54.615 54.615 0 0 1 4.653-2.52.75.75 0 0 0-.65-1.352 56.123 56.123 0 0 0-4.78 2.589 1.858 1.858 0 0 0-.859 1.228 49.803 49.803 0 0 0-4.634-1.527.75.75 0 0 1-.231-1.337A60.653 60.653 0 0 1 11.7 2.805Z" />
          <path d="M13.06 15.473a48.45 48.45 0 0 1 7.666-3.282c.134 1.414.22 2.843.255 4.284a.75.75 0 0 1-.46.711 47.87 47.87 0 0 0-8.105 4.342.75.75 0 0 1-.832 0 47.87 47.87 0 0 0-8.104-4.342.75.75 0 0 1-.461-.71c.035-1.442.121-2.87.255-4.286.921.304 1.83.634 2.726.99v1.27a1.5 1.5 0 0 0-.14 2.508c-.09.38-.222.753-.397 1.11.452.213.901.434 1.346.66a6.727 6.727 0 0 0 .551-1.607 1.5 1.5 0 0 0 .14-2.67v-.645a48.549 48.549 0 0 1 3.44 1.667 2.25 2.25 0 0 0 2.12 0Z" />
          <path d="M4.462 19.462c.42-.419.753-.89 1-1.395.453.214.902.435 1.347.662a6.742 6.742 0 0 1-1.286 1.794.75.75 0 0 1-1.06-1.06Z" />
        </svg>
      </div>
  

      <p>Total Students</p>
      <p class="font-extrabold"><%= @total_students %></p>
    </div>

    <div class="py-4 flex flex-col items-center justify-center space-y-3 font-medium text-sm bg-rose-200 shadow-2xl rounded-lg">
      <div class="mb-2 w-8 h-8 flex flex-col items-center justify-center bg-rose-500 transform rotate-45 rounded">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 transform -rotate-45 text-white">
          <path fill-rule="evenodd" d="M8.25 6.75a3.75 3.75 0 1 1 7.5 0 3.75 3.75 0 0 1-7.5 0ZM15.75 9.75a3 3 0 1 1 6 0 3 3 0 0 1-6 0ZM2.25 9.75a3 3 0 1 1 6 0 3 3 0 0 1-6 0ZM6.31 15.117A6.745 6.745 0 0 1 12 12a6.745 6.745 0 0 1 6.709 7.498.75.75 0 0 1-.372.568A12.696 12.696 0 0 1 12 21.75c-2.305 0-4.47-.612-6.337-1.684a.75.75 0 0 1-.372-.568 6.787 6.787 0 0 1 1.019-4.38Z" clip-rule="evenodd" />
          <path d="M5.082 14.254a8.287 8.287 0 0 0-1.308 5.135 9.687 9.687 0 0 1-1.764-.44l-.115-.04a.563.563 0 0 1-.373-.487l-.01-.121a3.75 3.75 0 0 1 3.57-4.047ZM20.226 19.389a8.287 8.287 0 0 0-1.308-5.135 3.75 3.75 0 0 1 3.57 4.047l-.01.121a.563.563 0 0 1-.373.486l-.115.04c-.567.2-1.156.349-1.764.441Z" />
        </svg>    
      </div>
      <p>Total Teachers</p>
      <p class="font-extrabold"><%= @total_teachers %></p>
    </div>

    <div class="py-4 flex flex-col items-center justify-center space-y-3 font-medium text-sm bg-blue-200 shadow-2xl rounded-lg">
      <div class="mb-2 w-8 h-8 flex flex-col items-center justify-center bg-blue-500 transform rotate-45 rounded">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 transform -rotate-45 text-white">
          <path d="M11.25 4.533A9.707 9.707 0 0 0 6 3a9.735 9.735 0 0 0-3.25.555.75.75 0 0 0-.5.707v14.25a.75.75 0 0 0 1 .707A8.237 8.237 0 0 1 6 18.75c1.995 0 3.823.707 5.25 1.886V4.533ZM12.75 20.636A8.214 8.214 0 0 1 18 18.75c.966 0 1.89.166 2.75.47a.75.75 0 0 0 1-.708V4.262a.75.75 0 0 0-.5-.707A9.735 9.735 0 0 0 18 3a9.707 9.707 0 0 0-5.25 1.533v16.103Z" />
        </svg>
      </div>
      <p>Total Subjects</p>
      <p class="font-extrabold"><%= @total_subjects %></p>
    </div>

    <div class="py-4 flex flex-col items-center justify-center space-y-3 font-medium text-sm bg-yellow-200 shadow-2xl rounded-lg">
      <div class="mb-2 w-8 h-8 flex flex-col items-center justify-center bg-yellow-500 transform rotate-45 rounded">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 transform -rotate-45 text-white">
          <path d="M12.75 12.75a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM7.5 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM8.25 17.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM9.75 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM10.5 17.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM12 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM12.75 17.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM14.25 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM15 17.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM16.5 15.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5ZM15 12.75a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM16.5 13.5a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" />
          <path fill-rule="evenodd" d="M6.75 2.25A.75.75 0 0 1 7.5 3v1.5h9V3A.75.75 0 0 1 18 3v1.5h.75a3 3 0 0 1 3 3v11.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V7.5a3 3 0 0 1 3-3H6V3a.75.75 0 0 1 .75-.75Zm13.5 9a1.5 1.5 0 0 0-1.5-1.5H5.25a1.5 1.5 0 0 0-1.5 1.5v7.5a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5v-7.5Z" clip-rule="evenodd" />
        </svg>
      </div>
      <p>Current Term</p>
      <p class="font-extrabold"><%= @current_semester %></p>
    </div>
  </div>

  <!-- chart for subjects performance -->
  <div class="mb-8 md:grid grid-cols-5 gap-6">
    <div class="col-span-4 p-2 rounded-lg shadow-2xl">
    <h3 class="font-serif font-semibold">Statistics</h3>
      <%= column_chart @subject_scores.map { |subject_term, score| [subject_term, score] }, id: "subject-performance-bar-chart",  colors: ["#0d9488"]  %>
    </div>

    <!-- Display the progress status for each subject -->
    <div class="p-4 rounded-lg shadow-2xl">
      <h3 class="mb-4 font-serif font-semibold">Subject Activites</h3>
      <% @subject_status.each do |subject_term, status| %>
        <p class="font-medium"><%= subject_term %>: <span class="text-green-500"><%= status %></span></p>
      <% end %>
    </div>
  </div>
  

  <!-- Database -->
  <div class="overflow-x-auto">
    <table class="table-auto w-full bg-white shadow-md rounded-lg shadow-2xl">
      <thead>
        <tr class="border-b ">
          <th class="pb-2 px-2">Student name</th>
          <th class="pb-2 px-2">Subject name</th>
          <th class="pb-2 px-2">total score</th>
          <th class="pb-2 px-2">Submitted</th>
          <th class="pb-2 px-2">Grade</th>
          <th class="pb-2 px-2">Remarks</th>
        </tr>
      </thead>

      <tbody>
      <% @reports.each do |report| %>
        <tr class="even:bg-gray-200 hover:bg-purple-100">
          <td class="border-b hover:border-b-purple-300 px-4 py-2 text-center text-gray-800">
            <%= report.student.fullname %> <%= report.student.last_name %>
          </td>
          <td class="border-b hover:border-b-purple-300 px-4 py-2 text-center text-gray-800">
            <%= report.subject.subject_name %>
          </td>
          <td class="border-b hover:border-b-purple-300 px-4 py-2 text-center text-gray-800">
            <%= report.total %>
          </td>
          <td class="border-b hover:border-b-purple-300 px-4 py-2 text-center text-gray-800">
            <%= report.created_at.strftime("%m/%d/%Y %I:%M %p") %>
          </td>
          <td class="border-b hover:border-b-purple-300 px-4 py-2 text-center text-gray-800">
            <%= report.grade %>
          </td>
          <td class="border-b hover:border-b-purple-300 px-4 py-2 text-center text-gray-800">
            <%= report.remarks %>
          </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
