<div class="flex items-center justify-center">
	<div class="mt-20 w-full md:w-3/4 lg:w-3/5">
	<%= link_to "&larr; Back".html_safe, students_path, class: "mb-12 btn text-gray-800" %>

		<div>
			<%= render 'student', student: @student %>
		</div>

		<div class="my-4 flex space-x-4">
			<%= link_to "Edit", edit_student_path(@student), class: "btn bg-blue-100 text-blue-800" %>
			<%= button_to "Delete", @student, method: :delete, 
														data: {turbo_confirm: "This student will be deleted from records!"},
														class: "btn-danger" %>
		</div>
	</div>
</div>


