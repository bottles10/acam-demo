  <table class="table-auto w-full border-collapse border border-gray-300">
    <thead>
      <tr class="bg-gray-100">
        <th class="border border-gray-300 px-4 py-2 text-left text-gray-700 font-semibold">Subject</th>
        <th class="border border-gray-300 px-4 py-2 text-left text-gray-700 font-semibold">Teachers</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="border border-gray-300 px-4 py-2 text-gray-600"><%= @subject.subject_name %></td>
        <td class="border border-gray-300 px-4 py-2 text-gray-600">
          <% @subject.teachers.map do |teacher| %>
            <ul class="list-disc list-inside">
              <li><%= teacher.username %></li>
            </ul>
          <% end %>
        </td>      
      </tr>
     
    </tbody>
  </table>

  <div class="mt-6 flex space-x-4">
    <%= link_to 'Edit', edit_subject_path(@subject), class: "btn-primary hover:bg-blue-500" %>
    <%= link_to '&larr; Back'.html_safe, subjects_path, class: "btn-cancel" %>
  </div>
