<%= form_with(model: subject) do |form| %>
  <%= render partial: "layouts/shared/error_explanation", locals: { model_name: subject } %>
  <div class="space-y-2">
    <div>
      <%= form.label :subject_name, class: "font-medium" %>
      <%= form.text_field :subject_name, class: "form-control w-full focus:border-blue-500 rounded" %>
    </div>

    <div class="">
      <%= form.label :teacher_ids, "Teachers", class: "font-medium" %>
    
      <!-- Dropdown Button and Content -->
      <div class="relative block group">
        <button class="form-control">Assign a teacher &darr;</button>
    
        <!-- Dropdown Content (Visible when hovering over the button) -->
        <div class="absolute left-0 hidden bg-white border-l-2 border-pink-500 shadow-lg rounded-md w-64 z-10 group-hover:block">
          <%= form.collection_checkboxes :teacher_ids, @teachers, :id, :fullname do |b| %>
            <label class="block px-4 py-2 text-gray-700">
              <%= b.check_box(class: 'h-5 w-5') %>
              <%= b.label(class: 'ml-2 text-sm text-rose-700') %>
            </label>
          <% end %>
        </div>
      </div>
    </div>  

    <div class="!mt-4">
      <%= form.submit class: "btn-primary hover:bg-blue-500 hover:scale-105 transition duration-300" %>
    </div>
  </div>
<% end %>